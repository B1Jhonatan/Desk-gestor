<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jaimes.gestorclaves.controller.LoginController">
    <children>
        <Pane prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: #eeeeee;">
            <Pane layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: white; -fx-background-radius: 20;">
                <Label layoutX="60.0" layoutY="100.0" text="Crear usuario">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
                <Label layoutX="30.0" layoutY="180.0" text="Username">
                    <font>
                        <Font size="14.0" />
                    </font></Label>
                <TextField fx:id="txtUsername" layoutX="25.0" layoutY="200.0" prefHeight="35.0" prefWidth="300.0" promptText="Ingrese usuario" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 10; -fx-border-width: 2;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
                <Label layoutX="30.0" layoutY="252.5" text="Password">
                    <font>
                        <Font size="14.0" />
                    </font></Label>
                <PasswordField fx:id="txtPassword" layoutX="25.0" layoutY="272.5" prefHeight="35.0" prefWidth="300.0" promptText="Ingrese contrasenha" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 10; -fx-border-width: 2;">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>
                <Button fx:id="btnLogin" layoutX="25.0" layoutY="340.0" onAction="#onClickSaveUser" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: #0d00ff; -fx-background-radius: 10;" text="Crear usuario" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font></Button>
                <Button layoutX="25.0" layoutY="50.0" mnemonicParsing="false" onAction="#onClickLogin" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: white; -fx-border-color: #0d00ff; -fx-border-radius: 10; -fx-border-width: 1.5;" text="Login" textFill="#0d00ff">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </Pane>
        </Pane>
    </children>
</VBox>
